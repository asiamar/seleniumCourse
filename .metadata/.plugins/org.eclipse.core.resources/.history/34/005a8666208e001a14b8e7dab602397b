		WebDriver driver=new ChromeDriver();
		
		driver.get("https://www.cleartrip.com/");
		Thread.sleep(2000);
		//driver.switchTo().alert().accept();
		
		Select select = new Select(driver.findElement(By.name("adults")));
		select.selectByIndex(5);
